<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="activity.ctec.aboutme.MusicActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swapScreenText"
        android:id="@+id/button2"
        android:layout_below="@+id/MusicImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I like listening to music. I enjoy listening to all music genres. I like finding new people to listen to."
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/MusicImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/MusicImage"
        android:background="@drawable/music"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
